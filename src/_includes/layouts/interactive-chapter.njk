---
# This layout is used by interactive multi-path chapters.
# It extends the base layout to inherit header, footer, and site chrome.
---
{% extends "layouts/base.njk" %}

{% block content %}
<link rel="stylesheet" href="/css/interactive-chapter.css">
<style>
.vol-breadcrumb {
    display: flex;
    justify-content: center;
    padding: 0.5rem 1rem 3rem;
    position: sticky;
    top: 105px;
    z-index: 999;
    background: transparent;
}
.vol-breadcrumb a {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.85rem;
    letter-spacing: 0.04em;
    color: var(--gold-primary, #C4943A);
    opacity: 0.8;
    text-decoration: none;
    transition: opacity 0.2s ease;
}
.vol-breadcrumb a:hover {
    opacity: 1;
}
</style>

<script>
    window.WOP_SCRIPTURE_BOOKS = {{ "" | scriptureBooksJson | safe }};
</script>

<main class="interactive-chapter" data-chapter="{{ chapter }}">
  {% if volumeUrl %}
  <div class="vol-breadcrumb">
      <a href="{{ volumeUrl }}">
          <svg viewBox="0 0 24 24" width="13" height="13" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
          Volume {{ volume }} Contents
      </a>
  </div>
  {% endif %}
  {{ content | safe }}
</main>

<button id="float-back" onclick="showGateway()" aria-label="Return to pathway selection">&#8617; Back to Paths</button>

<div id="transition-screen" aria-hidden="true">
  <div class="star-melchizedek">
    <div class="sq"></div>
    <div class="sq"></div>
  </div>
  <div class="transition-text">Preparing your place at the table&hellip;</div>
</div>

<script src="/js/wop-reflections.js"></script>
<script src="/js/interactive-chapter.js"></script>
{% endblock %}
