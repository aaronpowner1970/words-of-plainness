<!-- Mobile Menu Overlay -->
<div class="mobile-menu-overlay" id="mobileMenuOverlay"></div>

<!-- Mobile Menu Panel -->
<nav class="mobile-menu" id="mobileMenu" aria-label="Mobile navigation">
    <div class="mobile-menu-header">
        <span class="mobile-menu-title">{{ site.name }}</span>
        <button class="mobile-menu-close" id="mobileMenuClose" aria-label="Close menu">
            <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>
    </div>
    
    <ul class="mobile-menu-nav">
        {% for item in navigation.main %}
        <li>
            <a href="{{ item.url }}" class="mobile-menu-link{% if page.url == item.url %} active{% endif %}">
                {{ item.title }}
            </a>
        </li>
        {% endfor %}
    </ul>
    
    <!-- Auth Section -->
    <div class="mobile-menu-auth" id="mobileMenuAuth">
        <!-- Logged out state -->
        <div class="mobile-menu-auth-loggedout" id="mobileAuthLoggedOut">
            <button class="mobile-menu-signin" id="mobileSignIn">Sign In</button>
            <button class="mobile-menu-join" id="mobileJoinFree">Join Free</button>
        </div>
        <!-- Logged in state (hidden by default) -->
        <div class="mobile-menu-auth-loggedin hidden" id="mobileAuthLoggedIn">
            <div class="mobile-menu-user-info">
                <span class="mobile-menu-user-avatar" id="mobileUserAvatar"></span>
                <span class="mobile-menu-username" id="mobileUsername"></span>
            </div>
            <button class="mobile-menu-signout" id="mobileSignOut">Sign Out</button>
        </div>
    </div>

    <div class="mobile-menu-footer">
        <a href="{{ site.social.discord }}" class="mobile-discord-link" target="_blank" rel="noopener">
            <svg viewBox="0 0 24 24" width="20" height="20">
