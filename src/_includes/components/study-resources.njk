{# Study Resources Section - cards for PDF, overview, testimony, etc. #}

<section class="study-resources" id="studyResources">
    <h2 class="section-title">Study Resources</h2>
    <p class="section-subtitle">Deepen your understanding with these supplementary materials</p>
    
    <div class="resources-grid">
        <!-- PDF Download -->
        <a href="/assets/pdf/{{ pdf }}" class="resource-card" download>
            <div class="resource-icon">
                <svg viewBox="0 0 24 24" width="32" height="32" stroke="currentColor" stroke-width="2" fill="none">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                    <line x1="16" y1="13" x2="8" y2="13"></line>
                    <line x1="16" y1="17" x2="8" y2="17"></line>
                    <polyline points="10 9 9 9 8 9"></polyline>
                </svg>
            </div>
            <div class="resource-content">
                <h3>Download Chapter</h3>
                <p>PDF format for offline reading</p>
            </div>
        </a>
        
        <!-- Audio Overview -->
        <button class="resource-card" data-modal="overview">
            <div class="resource-icon">
                <svg viewBox="0 0 24 24" width="32" height="32" stroke="currentColor" stroke-width="2" fill="none">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polygon points="10 8 16 12 10 16 10 8" fill="currentColor"></polygon>
                </svg>
            </div>
            <div class="resource-content">
                <h3>Chapter Overview</h3>
                <p>5-minute audio summary</p>
            </div>
        </button>
        
        <!-- Musical Testimony -->
        <button class="resource-card" data-modal="testimony">
            <div class="resource-icon">
                <svg viewBox="0 0 24 24" width="32" height="32" stroke="currentColor" stroke-width="2" fill="none">
                    <path d="M9 18V5l12-2v13"></path>
                    <circle cx="6" cy="18" r="3"></circle>
                    <circle cx="18" cy="16" r="3"></circle>
                </svg>
            </div>
            <div class="resource-content">
                <h3>Musical Testimony</h3>
                <p>Original song inspired by this chapter</p>
            </div>
        </button>
        
        <!-- Visual Summary -->
        <button class="resource-card" data-modal="infographic">
            <div class="resource-icon">
                <svg viewBox="0 0 24 24" width="32" height="32" stroke="currentColor" stroke-width="2" fill="none">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    <circle cx="8.5" cy="8.5" r="1.5" fill="currentColor"></circle>
                    <polyline points="21 15 16 10 5 21"></polyline>
                </svg>
            </div>
            <div class="resource-content">
                <h3>Visual Summary</h3>
                <p>Key concepts at a glance</p>
            </div>
        </button>
        
        <!-- Study Slides -->
        <button class="resource-card" data-modal="slides">
            <div class="resource-icon">
                <svg viewBox="0 0 24 24" width="32" height="32" stroke="currentColor" stroke-width="2" fill="none">
                    <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                    <line x1="8" y1="21" x2="16" y2="21"></line>
                    <line x1="12" y1="17" x2="12" y2="21"></line>
                </svg>
            </div>
            <div class="resource-content">
                <h3>Study Slides</h3>
                <p>For group discussion</p>
            </div>
        </button>
    </div>
</section>
