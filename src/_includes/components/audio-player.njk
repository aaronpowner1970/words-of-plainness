{# 
    AUDIO PLAYER COMPONENT
    =======================
    Bottom-fixed audio player with playback controls.
    To be fully extracted from Chapter 1 HTML in Phase 2.
#}

<!-- Audio Player -->
<div class="audio-player" id="audioPlayer">
    <audio id="chapterAudio" preload="metadata">
        <source src="/assets/audio/{{ audio.narration }}" type="audio/mpeg">
    </audio>
    
    <div class="audio-player-content">
        <div class="audio-info">
            <span class="audio-title">Chapter {{ chapter }}: {{ title }}</span>
            <span class="audio-time">
                <span id="audioCurrentTime">0:00</span>
                <span>/</span>
                <span id="audioDuration">0:00</span>
            </span>
        </div>
        
        <div class="audio-controls">
            <button class="audio-btn" id="audioRewind" aria-label="Rewind 10 seconds">
                <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M1 4v6h6M3.5 10A9 9 0 1 1 3.5 14"/>
                    <text x="12" y="15" font-size="7" fill="currentColor" stroke="none" text-anchor="middle">10</text>
                </svg>
            </button>
            
            <button class="audio-btn play-btn" id="audioPlayPause" aria-label="Play or pause">
                <svg viewBox="0 0 24 24" width="24" height="24" id="playIcon">
                    <polygon points="5 3 19 12 5 21 5 3" fill="currentColor"/>
                </svg>
                <svg viewBox="0 0 24 24" width="24" height="24" id="pauseIcon" style="display:none">
                    <rect x="6" y="4" width="4" height="16" fill="currentColor"/>
                    <rect x="14" y="4" width="4" height="16" fill="currentColor"/>
                </svg>
            </button>
            
            <button class="audio-btn" id="audioForward" aria-label="Forward 10 seconds">
                <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M23 4v6h-6M20.5 10A9 9 0 1 0 20.5 14"/>
                    <text x="12" y="15" font-size="7" fill="currentColor" stroke="none" text-anchor="middle">10</text>
                </svg>
            </button>
        </div>
        
        <div class="audio-progress">
            <input type="range" id="audioSeek" min="0" max="100" value="0" class="audio-seek">
        </div>
        
        <div class="audio-extras">
            <div class="speed-control">
                <button class="speed-arrow" id="audioSpeedDown" aria-label="Decrease speed">
                    <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="15 18 9 12 15 6"/></svg>
                </button>
                <span class="speed-label" id="audioSpeed">1x</span>
                <button class="speed-arrow" id="audioSpeedUp" aria-label="Increase speed">
                    <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="9 18 15 12 9 6"/></svg>
                </button>
            </div>
            
            <button class="audio-btn" id="audioClose" aria-label="Close audio player">
                <svg viewBox="0 0 24 24" width="20" height="20" stroke="currentColor" stroke-width="2" fill="none">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
    </div>
</div>
