{# Mobile TOC Panel - slide out drawer #}

<div class="toc-mobile-overlay" id="tocMobileOverlay"></div>

<div class="toc-mobile-panel" id="tocMobilePanel">
    <div class="toc-mobile-header">
        <h3>Contents</h3>
        <button class="toc-mobile-close" id="tocMobileClose" aria-label="Close table of contents">
            <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>
    </div>
    <nav class="toc-mobile-nav" aria-label="Table of contents">
        <ul class="toc-list">
            {% if toc %}
                {% for section in toc %}
                <li>
                    <a href="#{{ section.id }}" class="toc-link" data-section="{{ section.id }}">
                        {{ section.title }}
                    </a>
                </li>
                {% endfor %}
            {% endif %}
        </ul>
    </nav>
</div>
