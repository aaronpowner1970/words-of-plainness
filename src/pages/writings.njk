<script>
document.addEventListener('DOMContentLoaded', async () => {
    if (!window.API?.isAuthenticated()) return;
    try {
        const progress = await window.API.getAllProgress();
        const items = Array.isArray(progress) ? progress : (progress.results || []);
        items.forEach(p => {
            const badge = document.querySelector(`[data-progress-for="${p.chapter_slug}"]`);
            if (!badge) return;
            if (p.status === 'completed') {
                badge.textContent = 'Completed';
                badge.classList.add('badge-completed');
            } else if (p.status === 'in_progress') {
                badge.textContent = 'In Progress';
                badge.classList.add('badge-in-progress');
            }
        });
    } catch (e) { console.warn('Could not load progress:', e); }
});
</script>

